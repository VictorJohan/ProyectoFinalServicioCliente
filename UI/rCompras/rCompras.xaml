<Window x:Class="ProyectoFinalServicioCliente.UI.rCompras.rCompras"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinalServicioCliente.UI.rCompras"
        mc:Ignorable="d"
        Title="Compras" Height="450" Width="942" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/Resources/producto.png">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Label Content="CompraId" FontSize="11"/>
            <!--CompraTextBox y Boton Buscar en StackPanel-->

            <StackPanel Orientation="Horizontal">
                <!--TextBox-->
                <TextBox Name="CompraIdTextBox" Width="821" Height="20" Text="{Binding CompraId}" Margin="5,0" HorizontalAlignment="Left"/>
                <!--Boton-->
                <Button Name="BuscarButton" Width="60" Height="20" Click="BuscarButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/search.png"/>
                        <Label Content="Buscar" FontSize="11" Padding="-1" Margin="4,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <!--Monto-->
            <Label Content="Monto" FontSize="11"/>
            <TextBox Name="MontoTextBox" Width="884" Height="20" Text="{Binding Monto}" Margin="5,0" HorizontalAlignment="Left"/>
            
            <!--Fecha-->
            <Label Content="Fecha" FontSize="11"/>
            <DatePicker Name="FechaDatePicker" Width="884" SelectedDate="{Binding Fecha}" HorizontalAlignment="Left" Margin="5,0"/>
        
            <!--GroupBox donde esta el DataGrid-->
            <GroupBox Header="Compras Detalle" Width="884" HorizontalAlignment="Left" BorderBrush="Black" Margin="5,8,0,0">
                <StackPanel Orientation="Vertical">
                    <!--Barra de Labels-->
                    <StackPanel Orientation="Horizontal">
                        <Label Content="ArticuloId" FontSize="11"/>
                        <Label Content="Descripción" FontSize="11"/>
                        <Label Content="Stock" FontSize="11" Margin="185,0,0,0"/>
                        <Label Content="Categoria" FontSize="11" Margin="24,0,0,0"/>
                        <Label Content="Precio Venta" FontSize="11" Margin="22,0,0,0"/>
                        <Label Content="Precio Compra" FontSize="11" Margin="10,0,0,0"/>
                        <Label Content="Cantidad" FontSize="11" Margin="-2,0,0,0"/>
                        <Label Content="Total" FontSize="11" Margin="24,0,0,0" Width="35"/>

                    </StackPanel>
                    
                    <!--Barra de TextBox-->
                    <StackPanel Orientation="Horizontal">
                        <!--ComboBox Articulo-->
                        <ComboBox Name="ArticuloIdComboBox" Width="46" Height="20" Margin="5,0" SelectionChanged="ArticuloIdComboBox_SelectionChanged"/>

                        <!--TextBox Descripcion-->
                        <TextBox Name="DescripcionDetalleTextBox" IsReadOnly="True" Width="242" Height="20" Margin="6,0,5,0"/>

                        <!--TextBox Stock-->
                        <TextBox Name="StockDetalleTextBox" Width="50" IsReadOnly="True" Height="20" Margin="5,0"/>

                        <!--Categoria-->
                        <ComboBox Name="CategoriaDetalleComboBox" Width="70" Height="20" Margin="5,0"/>

                        <!--TextBox Precio Venta-->
                        <TextBox Name="PrecioVentaTextBox" Width="70" Height="20" Margin="5,0"/>

                        <!--TextBox Precio-->
                        <TextBox Name="PrecioDetalleTextBox" Width="70" Height="20" Margin="5,0" TextChanged="PrecioDetalleTextBox_TextChanged"/>

                        <!--TextBox Costo-->
                        <TextBox Name="CantidadDetalleTextBox"  Width="70" Height="20" Margin="5,0" TextChanged="CantidadDetalleTextBox_TextChanged"/>

                        <!--TextBox Cantidad de articulos-->
                        <TextBox Name="TotalDetalleTextBox" IsReadOnly="True" Width="70" Height="20" Margin="5,0"/>

                        <Button Name="AgregarButton"  Width="70" Height="20" Margin="10,0" Click="AgregarButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/agregar.png" />
                                <Label Content="Agregar" FontSize="11" Margin="4,0" Padding="-1"/>
                            </StackPanel>
                        </Button>
                        
                    </StackPanel>

                    <!--DataGrid-->
                    <DataGrid Name="DetalleDataGrid" Width="844" Height="100" AutoGenerateColumns="False" AlternatingRowBackground="#FFBAE3FF" HorizontalAlignment="Left" ItemsSource="{Binding ComprasDetalles}" Margin="5,5,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ArticuloId" Binding="{Binding Articulo.ArticuloId}"/>
                            <DataGridTextColumn Header="Descripción" Binding="{Binding Articulo.Descripcion}"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Articulo.Stock}"/>
                            <DataGridTextColumn Header="Categoria" Binding="{Binding Articulo.CategoriaId}"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Articulo.Precio}"/>
                            <DataGridTextColumn Header="Costo" Binding="{Binding Articulo.Costo}"/>
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    

                    <StackPanel Orientation="Horizontal">
                        <!--Boton Remover-->
                        <Button Name="RemoverButton"  Width="70" Height="20" Margin="5,5" HorizontalAlignment="Left" Click="RemoverButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/remover.png" />
                                <Label Content="Remover" FontSize="11" Margin="4,0" Padding="-1"/>
                            </StackPanel>
                        </Button>

                        <!--Boton actualizar-->
                        <Button Name="ActualizarButton"  Width="75" Height="20"  Click="ActualizarButton_Click" Margin="576,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/actualizar.png" />
                                <Label Content="Actualizar" FontSize="11" Margin="4,0" Padding="-1"/>
                            </StackPanel>
                        </Button>

                        <!--Registrar otro Articulo-->
                        <Button Name="RegistrarArticuloButton"  Width="113" Height="20" Margin="5,5,5,5" Click="RegistrarArticuloButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/articulo.png" />
                                <Label Content="Registrar Articulo" FontSize="11" Margin="4,0" Padding="-1"/>
                            </StackPanel>
                        </Button>
                        
                    </StackPanel>
                    
                </StackPanel>
            </GroupBox>
            
            <!--Panel de Botones-->
            <StackPanel Orientation="Horizontal" Margin="36,16,0,0" Width="212">
                <!--Nuevo-->
                <Button Name="NuevoButton"  Width="60" Height="20" Click="NuevoButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/pedido.png" />
                        <Label Content="Nuevo" FontSize="11" Margin="4,0" Padding="-1"/>
                    </StackPanel>
                </Button>
                <!--Guardar-->
                <Button Name="GuardarButton" Width="65" Height="20" Margin="5,0,0,0" HorizontalAlignment="Left" Click="GuardarButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/save.png" />
                        <Label Content="Guardar" FontSize="11" Margin="4,0" Padding="-1"/>
                    </StackPanel>
                </Button>
                <!--Eliminar-->
                <Button Name="EliminarButton"  Width="65" Height="20" Margin="5,0" HorizontalAlignment="Left" Click="EliminarButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/delete.png" />
                        <Label Content="Eliminar" FontSize="11" Margin="4,0" Padding="-1"/>
                    </StackPanel>
                </Button>

            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
